{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext", 
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017",
      "es6",
      "es5",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./"
  }
}